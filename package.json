{
  "name": "next-portfolio",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack -p 3010",
    "build": "next build",
    "start": "next start -p 3010",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "prepare": "husky",
    "gen:i18n-types": "tsx src/shared/libs/i18n/scripts/generate-i18n-types.ts",
    "watch:i18n-types": "chokidar \"src/shared/libs/i18n/locales/**/*.json\" -c \"npm run gen:i18n-types\"",
    "gen:i18n-namespaces": "tsx src/shared/libs/i18n/scripts/generate-i18n-dictionary-namespaces",
    "gen:i18n-locales": "tsx src/shared/libs/i18n/scripts/generate-i18n-locales.ts",
    "gen:i18n": "npm run gen:i18n-types && npm run gen:i18n-namespaces && npm run gen:i18n-locales"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.1.1",
    "@reduxjs/toolkit": "^2.8.2",
    "@tanstack/react-query": "^5.83.0",
    "@tanstack/react-query-devtools": "^5.83.0",
    "crypto-js": "^4.2.0",
    "graffle": "next",
    "next": "15.5.6",
    "next-auth": "^4.24.11",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.60.0",
    "react-redux": "^9.2.0",
    "redux-persist": "^6.0.0",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.2",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "chokidar-cli": "^3.0.0",
    "glob": "^11.0.3",
    "husky": "^9.1.7",
    "jest": "^30.0.4",
    "jest-environment-jsdom": "^30.0.4",
    "msw": "^2.10.4",
    "prettier": "^3.6.2",
    "tailwindcss": "^4",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5"
  },
  "msw": {
    "workerDirectory": ["public"]
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": ["biome check --write"]
  }
}
